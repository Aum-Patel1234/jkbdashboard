<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Student Registration</title>
  <link rel="icon" href="/favicon.png" type="image/png">
  <link rel="stylesheet" href="/styles/tailwind.css">
</head>

<body class="bg-gray-900 text-white flex items-center justify-center h-screen">
  <!-- <pre> -->
  <!--   <%= JSON.stringify(user, null, 2) %> -->
  <!-- </pre> -->
  <div class="bg-gray-800/50 backdrop-blur-md p-8 rounded-2xl shadow-lg w-11/12 max-w-6xl">
    <h2 class="text-3xl font-bold text-center text-blue-400 mb-6">Student Registration</h2>

    <form id="userForm" method="POST">
      <div class="grid grid-cols-2 gap-6">


        <div class="space-y-4">
          <div>
            <label class="block text-sm font-medium">Full Name</label>
            <input type="text" name="full_name" required value="<%= user && user ? user.full_name : '' %>"
              class="w-full mt-1 p-2 bg-gray-700 border border-gray-600 rounded-lg focus:ring-blue-500">
          </div>

          <div>
            <label class="block text-sm font-medium">Email</label>
            <input type="email" name="email" required value="<%= user && user ? user.email : '' %>"
              class="w-full mt-1 p-2 bg-gray-700 border border-gray-600 rounded-lg focus:ring-blue-500">
          </div>

          <div>
            <label class="block text-sm font-medium">Branch</label>
            <input type="text" name="branch" required value="<%= user && user ? user.branch : '' %>"
              class="w-full mt-1 p-2 bg-gray-700 border border-gray-600 rounded-lg focus:ring-blue-500">
          </div>

          <div>
            <label class="block text-sm font-medium">Student Contact</label>
            <input type="tel" name="student_contact" required value="<%= user && user ? user.student_contact : '' %>"
              class="w-full mt-1 p-2 bg-gray-700 border border-gray-600 rounded-lg focus:ring-blue-500">
          </div>

          <div>
            <label class="block text-sm font-medium">Parent Contact</label>
            <input type="tel" name="parent_contact" required value="<%= user && user ? user.parent_contact : '' %>"
              class="w-full mt-1 p-2 bg-gray-700 border border-gray-600 rounded-lg focus:ring-blue-500">
          </div>

          <div>
            <label class="block text-sm font-medium">Subjects</label>
            <input type="text" name="subjects" placeholder="Math, Science, English"
              value="<%= user && user ? user.subjects.join(', ') : '' %>"
              class="w-full mt-1 p-2 bg-gray-700 border border-gray-600 rounded-lg focus:ring-blue-500">
          </div>

          <div>
            <label class="block text-sm font-medium">XII/Diploma Type</label>
            <select name="xii_diploma_type"
              class="w-full mt-1 p-2 bg-gray-700 border border-gray-600 rounded-lg focus:ring-blue-500">
              <option value="XII" <%=user && user && user.xii_diploma_type==='XII' ? 'selected' : '' %>>XII
              </option>
              <option value="Diploma" <%=user && user && user.xii_diploma_type==='Diploma' ? 'selected' : '' %>
                >Diploma</option>
            </select>
          </div>

          <div>
            <label class="block text-sm font-medium">XII/Diploma Score</label>
            <input type="number" step="0.01" name="xii_diploma_score"
              value="<%= user && user ? user.xii_diploma_score : '' %>"
              class="w-full mt-1 p-2 bg-gray-700 border border-gray-600 rounded-lg focus:ring-blue-500">
          </div>

          <div>
            <label class="block text-sm font-medium">CET/JEE Type</label>
            <select name="cet_jee_type"
              class="w-full mt-1 p-2 bg-gray-700 border border-gray-600 rounded-lg focus:ring-blue-500">
              <option value="CET" <%=user && user && user.cet_jee_type==='CET' ? 'selected' : '' %>>CET</option>
              <option value="JEE" <%=user && user && user.cet_jee_type==='JEE' ? 'selected' : '' %>>JEE</option>
            </select>
          </div>
        </div>

        <!-- Column 2 -->
        <div class="space-y-4">
          <div>
            <label class="block text-sm font-medium">CET/JEE Score</label>
            <input type="number" step="0.01" max="100" name="cet_jee_score"
              value="<%= user && user ? user.cet_jee_score : '' %>"
              class="w-full mt-1 p-2 bg-gray-700 border border-gray-600 rounded-lg focus:ring-blue-500">
          </div>

          <div>
            <label class="block text-sm font-medium">Address</label>
            <textarea name="address" rows="2"
              class="w-full mt-1 p-2 bg-gray-700 border border-gray-600 rounded-lg focus:ring-blue-500">
              <%= user && user ? user.address : '' %>
            </textarea>
          </div>

          <div>
            <label class="block text-sm font-medium">College Name</label>
            <input type="text" name="college_name" value="<%= user && user ? user.college_name : '' %>"
              class="w-full mt-1 p-2 bg-gray-700 border border-gray-600 rounded-lg focus:ring-blue-500">
          </div>

          <div>
            <label class="block text-sm font-medium">Password</label>
            <input type="password" name="password" required
              class="w-full mt-1 p-2 bg-gray-700 border border-gray-600 rounded-lg focus:ring-blue-500">
          </div>

          <div>
            <label class="block text-sm font-medium">Confirm Password</label>
            <input type="password" name="c_password" required
              class="w-full mt-1 p-2 bg-gray-700 border border-gray-600 rounded-lg focus:ring-blue-500">
          </div>

          <div>
            <label class="block text-sm font-medium">Total Fees</label>
            <input type="number" step="0.01" name="totalfees" required value="<%= user && user ? user.totalfees : '' %>"
              class="w-full mt-1 p-2 bg-gray-700 border border-gray-600 rounded-lg focus:ring-blue-500">
          </div>

          <div>
            <label class="block text-sm font-medium">Student Fees</label>
            <input type="number" step="0.01" name="studentfees" required
              value="<%= user && user ? user.studentfees : '' %>"
              class="w-full mt-1 p-2 bg-gray-700 border border-gray-600 rounded-lg focus:ring-blue-500">
          </div>

          <div>
            <label class="block text-sm font-medium">Packages</label>
            <input type="text" name="packages" placeholder="Package1, Package2"
              value="<%= user && user ? user.packages.join(', ') : '' %>"
              class="w-full mt-1 p-2 bg-gray-700 border border-gray-600 rounded-lg focus:ring-blue-500">
          </div>


          <!-- Submit Button -->
          <div>
            <button type="submit"
              class="w-full mt-4 bg-blue-500 hover:bg-blue-600 transition py-2 rounded-lg text-white font-semibold">
              Register Student
            </button>
          </div>
        </div>
      </div>
  </div>
  </div>

  <script>
    const form = document.getElementById('userForm');

    form.addEventListener('submit', async function (event) {
      event.preventDefault(); // Prevent the default form submission

      const formData = new FormData(form);

      const formObject = {};
      formData.forEach((value, key) => {
        formObject[key] = value;
      });

      if (formObject['c_password'] !== formObject['password']) {
        alert('Confirm password and password have different values');
        return;
      }
      // console.log('here');
      // console.log(JSON.stringify(formObject));

      try {
        let url = '/users/add'; // default to add a new user
        let method = 'POST'; // default method

        const pathname = window.location.pathname;
        const editMatch = pathname.match(/\/edit\/(\d+)/); // extract user id if editing

        if (editMatch) {
          const userId = editMatch[1];
          url = `/users/edit/${userId}`;
          method = 'PUT'; // change method to put for editing
        }
        const response = await fetch(url, {
          method: method,
          headers: {
            'content-type': 'application/json',
          },
          body: JSON.stringify(formObject),
        });

        const result = await response.json();
        console.log(result);
      } catch (error) {
        console.error('error:', error);
      } finally {
        window.location.href = '/users';
      }
    });
  </script>


</body>

</html>
