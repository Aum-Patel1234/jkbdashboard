<div class="bg-gray-900 text-white p-8 rounded-lg shadow-lg w-full  mx-auto">
  <div class="flex justify-between items-center mb-6">
    <h2 class="text-3xl font-bold">Student Details</h2>
    <button class="bg-purple-600 px-4 py-2 rounded-full hover:bg-purple-700 transition duration-200">
      &#8592;
    </button>
  </div>

  <div class="flex space-x-3">
    <form action="/users/edit/<%= students.id %>" method="POST">
      <button type="submit" class="bg-indigo-500 px-5 py-2 rounded-lg hover:bg-indigo-600 transition duration-200">
        Edit Student
      </button>
    </form>
  </div>

  <!-- Scrollable Table Wrapper -->
  <div class="mt-8 border border-gray-700 rounded-lg overflow-hidden h-full">
    <div class="h-[650px] overflow-y-auto">
      <table class="w-full text-left text-gray-300">
        <tbody>
          <tr><td class="px-6 py-4 border-b border-gray-700 font-semibold">Name</td><td class="px-6 py-4 border-b border-gray-700"><%= students.full_name %></td></tr>
          <tr><td class="px-6 py-4 border-b border-gray-700 font-semibold">Username</td><td class="px-6 py-4 border-b border-gray-700"><%= students.username %></td></tr>
          <tr><td class="px-6 py-4 border-b border-gray-700 font-semibold">Email</td><td class="px-6 py-4 border-b border-gray-700"><%= students.email %></td></tr>
          <tr><td class="px-6 py-4 border-b border-gray-700 font-semibold">Student Contact</td><td class="px-6 py-4 border-b border-gray-700"><%= students.student_contact %></td></tr>
          <tr><td class="px-6 py-4 border-b border-gray-700 font-semibold">Parent Contact</td><td class="px-6 py-4 border-b border-gray-700"><%= students.parent_contact %></td></tr>
          <tr><td class="px-6 py-4 border-b border-gray-700 font-semibold">Location</td><td class="px-6 py-4 border-b border-gray-700"><%= students.address %></td></tr>
          <tr><td class="px-6 py-4 border-b border-gray-700 font-semibold">College</td><td class="px-6 py-4 border-b border-gray-700"><%= students.college_name %></td></tr>
          <tr><td class="px-6 py-4 border-b border-gray-700 font-semibold">Branch</td><td class="px-6 py-4 border-b border-gray-700"><%= students.branch %></td></tr>
          <tr><td class="px-6 py-4 border-b border-gray-700 font-semibold">XII Score</td><td class="px-6 py-4 border-b border-gray-700"><%= students.xii_diploma_score %></td></tr>
          <tr><td class="px-6 py-4 border-b border-gray-700 font-semibold">CET Score</td><td class="px-6 py-4 border-b border-gray-700"><%= students.cet_jee_score %></td></tr>
          <tr><td class="px-6 py-4 border-b border-gray-700 font-semibold">Total Fees</td><td class="px-6 py-4 border-b border-gray-700"><%= students.totalfees %></td></tr>
          <tr><td class="px-6 py-4 border-b border-gray-700 font-semibold">Student Fees</td><td class="px-6 py-4 border-b border-gray-700"><%= students.studentfees %></td></tr>
          <tr><td class="px-6 py-4 border-b border-gray-700 font-semibold">Pending Fees</td><td class="px-6 py-4 border-b border-gray-700">0</td></tr>
          <tr><td class="px-6 py-4 border-b border-gray-700 font-semibold">Packages</td><td class="px-6 py-4 border-b border-gray-700"><%= students.packages ? students.packages.join(', ') : 'N/A' %></td></tr>
          <tr><td class="px-6 py-4 font-semibold">Transactions</td><td class="px-6 py-4">N/A</td></tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

